{
  "functions": {
    "api/*.php": { "runtime": "vercel-php@0.7.0" },
    "*.php": { "runtime": "vercel-php@0.7.0" }
  },
  "routes": [
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/(.*)", "dest": "/index.php" }
  ],
  "env": {
    "DB_HOST": "your-db-host",
    "DB_NAME": "your-db-name",
    "DB_USER": "your-db-user",
    "DB_PASS": "your-db-pass"
  }
}
